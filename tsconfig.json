{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "ES2021",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": false,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}